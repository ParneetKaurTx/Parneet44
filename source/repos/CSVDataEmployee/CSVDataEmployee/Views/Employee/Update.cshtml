@model CSVDataEmployee.Models.Employee

<h2>Update Employee</h2>

<form method="post" action="/Employee/Update/@Model.Id">
    <input type="hidden" name="Id" value="@Model.Id" />

    <label>Name:</label>
    <input type="text" name="Name" value="@Model.Name" required /><br>

    <label>Position:</label>
    <input type="text" name="Position" value="@Model.Position" required /><br>

    <label>Date of Birth:</label>
    <input type="date" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required /><br>

    <label>Email:</label>
    <input type="email" name="Email" value="@Model.Email" required /><br>

    <label>Salary:</label>
    <input type="number" name="Salary" value="@Model.Salary" required /><br>

    <button type="submit">Update</button>
</form>
