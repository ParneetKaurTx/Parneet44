@{
}
@model List<CSVDataEmployee.Models.Employee>

<h2>Employee List</h2>
<table border="1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Position</th>
        <th>Date of Birth</th>
        <th>Email</th>
        <th>Salary</th>
        <th>Actions</th>
    </tr>
    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.Id</td>
            <td>@emp.Name</td>
            <td>@emp.Position</td>
            <td>@emp.DateOfBirth.ToShortDateString()</td>
            <td>@emp.Email</td>
            <td>@emp.Salary</td>
            <td>
                <form method="post" action="/Employee/DeleteConfirmed/@emp.Id">
                    <input type="hidden" name="id" value="@emp.Id" />
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
